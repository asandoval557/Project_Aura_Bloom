<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <TextView
            android:id="@+id/mood_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mood_progress"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

    <ProgressBar
            android:id="@+id/mood_meter_progress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:progress="50"
            android:max="100"
            android:indeterminate="false"
            style="?android:attr/progressBarStyleHorizontal"
            app:layout_constraintTop_toBottomOf="@+id/mood_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/mood_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_50"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/mood_meter_progress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>