<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        tools:context=".LoginFragment">

    <!-- Welcome Back -->
    <TextView
            android:id="@+id/tv_welcome_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_back"
            android:textSize="56sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_alternates_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp"

            tools:ignore="TextContrastCheck"/>

    <!-- Rounded rectangle Constraint -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rounded_rectangle_container"
            android:layout_width="411dp"
            android:layout_height="500dp"
            android:background="@drawable/rounded_rectangle_gradient"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="236dp"
            android:padding="24dp" app:layout_constraintHorizontal_bias="0.0"
            tools:ignore="TextSizeCheck,VisualLintBounds">

        <!-- Username -->
        <EditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="username"
                android:hint="@string/email_address"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_alternates_regular"
                android:backgroundTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:inputType="textPersonName"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_welcome_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:minHeight="48dp" tools:ignore="NotSibling"/>

        <!-- Password -->
        <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="password"
                android:hint="@string/password"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_alternates_regular"
                android:backgroundTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:inputType="textPassword"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/et_username"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:minHeight="48dp"/>

        <!-- Forgot Password -->
        <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:fontFamily="@font/montserrat_alternates_regular"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/et_password"
                app:layout_constraintStart_toStartOf="@id/et_password"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"/>

        <!-- Log In Button -->
        <Button
                android:id="@+id/btn_log_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/log_in"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_alternates_regular"
                android:textColor="#000000"
                android:backgroundTint="#FFFFFF"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_forgot_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                tools:ignore="DuplicateSpeakableTextCheck"/>

        <!-- Log In with SSO Button -->
        <Button
                android:id="@+id/btn_log_in_sso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/log_in_with_sso"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_alternates_regular"
                android:textColor="#000000"
                android:backgroundTint="#FFFFFF"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/btn_log_in"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>

        <!-- Social Login Icons -->
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/btn_log_in_sso"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <!-- Apple -->
            <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:src="@drawable/ic_apple"
                    android:contentDescription="@string/log_in_with_apple" tools:ignore="ImageContrastCheck"/>

            <!-- Facebook -->
            <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:src="@drawable/ic_facebook"
                    android:contentDescription="@string/log_in_with_facebook"/>

            <!-- Google -->
            <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:src="@drawable/ic_google"
                    android:contentDescription="@string/log_in_with_google"/>
        </LinearLayout>

        <!-- Log In and Sign Up Links (bottom of screen) -->
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="12dp" android:layout_marginStart="32dp">

            <TextView
                    android:id="@+id/tv_log_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/log_in"
                    android:fontFamily="@font/montserrat_alternates_regular"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:layout_marginStart="0dp"/>
            <TextView
                    android:id="@+id/tv_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up"
                    android:fontFamily="@font/montserrat_alternates_regular"
                    android:textColor="#26A69A"
                    android:textSize="32sp"
                    android:layout_marginStart="64dp"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>