<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp"
        android:background="@drawable/gradient_background"
        tools:context=".SignUpFragment">

    <!-- Welcome -->
    <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_aurabloom"
            android:textSize="56sp"
            android:textColor="@color/dark_gray"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Full Name -->
    <EditText
            android:id="@+id/et_full_name"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:hint="@string/full_name"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:inputType="textPersonName"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            android:textSize="20sp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_welcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

    <!-- Email -->
    <EditText
            android:id="@+id/et_email"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:autofillHints="emailAddress"
            android:hint="@string/email"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:inputType="textEmailAddress"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            android:textSize="20sp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_full_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

    <!-- Password -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/password_layout"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <EditText
                android:id="@+id/et_password"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:autofillHints="password"
                android:hint="@string/password"
                android:background="@drawable/rounded_border"
                android:fontFamily="@font/montserrat_alternates_regular"
                android:inputType="textPassword"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:textSize="20sp"
                android:padding="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_password_toggle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"/>
        <ImageView
                android:id="@+id/iv_password_toggle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/view"
                android:contentDescription="@string/show_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.481"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Confirm Password -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/confirm_password_layout"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/password_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

    <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:hint="@string/confirm_password"
            android:background="@drawable/rounded_border"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:inputType="textPassword"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            android:textSize="20sp"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_confirm_password_toggle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

        <ImageView
                android:id="@+id/iv_confirm_password_toggle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/view"
                android:contentDescription="@string/show_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Sign Up Button -->
    <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/sign_up_button"
            android:text="@string/sign_up"
            android:textSize="28sp"
            android:padding="8dp"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:stateListAnimator="@animator/button_state_animator"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/confirm_password_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

    <!-- Log In and Sign Up Links (bottom of screen) -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp">

        <TextView
                android:id="@+id/tv_log_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_in"
                android:fontFamily="@font/montserrat_alternates_regular"
                android:textColor="@color/aqua"
                android:textSize="32sp"/>
        <TextView
                android:id="@+id/tv_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:fontFamily="@font/montserrat_alternates_regular"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:layout_marginStart="64dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


